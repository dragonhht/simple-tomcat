<?xml version="1.0" encoding="UTF-8"?>

<web-app
	id="WebApp_ID"
	version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
		http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>tomcat-test</display-name>

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>log4j.properties</param-value>
	</context-param>

	<filter>
		<filter-name>test filter</filter-name>
		<filter-class>com.github.dragonhht.test.filter.TestFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>test filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	 
	<listener>
		<listener-class>com.github.dragonhht.test.listener.TestListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>test-servlet</servlet-name>
		<servlet-class>
			com.github.dragonhht.test.servlet.TestServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>validate</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>test-servlet</servlet-name>
		<url-pattern>/test/servlet/*</url-pattern>
	</servlet-mapping>	

</web-app>
